@model LawyerWebSiteMVC.Models.HomeViewModel

<!doctype html>
<html class="no-js" lang="zxx">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Lawyer</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/index.css"> 
</head>
<body>
    <div class="slider_area ">
        <div class="slider_area_inner slider_bg_1 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-7">
                        <div class="single_slider">
                            <div class="slider_text">
                                <h3>Kaliteli Hukuki <br>
                                    Danışmanlık ve Destek</h3>
                                <a href="@Url.Action("Index", "Article")" class="boxed-btn4 ">Makaleler</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider_area_end -->

    <!-- practice_area_start -->
       <section class="pt-5 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h3 class="mb-6">Son Makaleler</h3>
                </div>
            </div>
            <div class="card-container">
                @foreach (var article in Model.LatestArticles.Take(3))
                {
                    <div class="card" onclick="location.href='@Url.Action("Detail", "Article", new { id = article.Id })'">
                        <img class="img-fluid" alt="Article Image" src="data:image/png;base64,@Convert.ToBase64String(article.ArticlePhotos.FirstOrDefault()?.Image ?? new byte[0])">
                        <div class="card-body">
                            <h4 class="card-title">@article.Title</h4>
                            <p class="card-text">@article.Subtitle</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
<!-- practice_area_end -->


    <!-- our_loyers-start  -->
    <div class="our_loyers">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="section_title text-center mb-60">
                        <h3>Müvekkillerimin Sesi</h3>
                        <p>Müvekkillerimin ihtiyaçlarını ve haklarını en iyi şekilde savunarak, onların sesi olmayı kendime görev edindim. Her dava, benim için müvekkilimin hayatına dokunma fırsatıdır.</p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-xl-4 col-md-6 col-lg-4">
                    <div class="single_lawyer text-center">
                        <a href="@Url.Action("Index", "About")">
                            <img class="profile-image" src="~/img/about/av_tugrul.jpeg" alt="Profile Image">
                        </a>
                        <h3>Av. Tuğrul Şengül</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="appointment_area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-5 col-md-6 col-lg-6">
                    <div class="appiontment_thumb d-none d-lg-block">
                        <img src="~/img/appointment/1.png" alt="">
                    </div>
                </div>
                <div class="col-xl-6 offset-xl-1 col-md-6 col-md-12 col-lg-6">
                    <div class="appointment_info">
                        <div class="opacity_icon d-none d-lg-block">
                            <i class="flaticon-balance"></i>
                        </div>
                        <h3>Bize Ulaşın!</h3>
                        <p></p>
                        <form asp-action="Create" asp-controller="Letter" method="post">
                            <div class="row">
                                <div class="col-xl-6 col-md-6">
                                    <input type="text" name="Name" placeholder="İsim" required>
                                </div>
                                <div class="col-xl-6 col-md-6">
                                    <input type="email" name="Email" placeholder="Email" required>
                                </div>
                                <div class="col-xl-6 col-md-6">
                                    <input type="text" name="PhoneNumber" placeholder="Telefon No" required>
                                </div>
                                <div class="col-xl-12">
                                    <textarea name="Content" placeholder="Mesaj" required></textarea>
                                </div>
                                <div class="col-xl-12">
                                    <div class="appoinment_button">
                                        <button class="boxed-btn5" type="submit">Gönder</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
   <script src="~/js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="~/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/isotope.pkgd.min.js"></script>
    <script src="~/js/ajax-form.js"></script>
    <script src="~/js/waypoints.min.js"></script>
    <script src="~/js/jquery.counterup.min.js"></script>
    <script src="~/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/js/scrollIt.js"></script>
</body>
</html>
