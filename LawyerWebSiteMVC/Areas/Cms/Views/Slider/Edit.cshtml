@model LawyerWebSiteMVC.Data.Slider

@{
    ViewData["Title"] = "Edit Slider";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Edit Slider</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group mb-3">
                            <label asp-for="Text" class="form-label"></label>
                            <input asp-for="Text" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="imageFile" class="form-label">Image</label>
                            <input type="file" class="form-control" id="imageFile" name="imageFile" />
                            @if (Model.Image != null)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" class="img-thumbnail mt-2" style="max-width: 200px;" />
                            }
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
