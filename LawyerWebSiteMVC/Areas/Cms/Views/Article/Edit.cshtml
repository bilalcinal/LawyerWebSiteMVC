@model LawyerWebSiteMVC.Models.ArticleDto

@{
    ViewData["Title"] = "Edit Article";
}

<h1>Edit Article</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Article.Id" />
    <div class="form-group">
        <label asp-for="Article.Title" class="control-label"></label>
        <input asp-for="Article.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Article.Subtitle" class="control-label"></label>
        <input asp-for="Article.Subtitle" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Article.Content" class="control-label"></label>
        <textarea asp-for="Article.Content" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Article.link" class="control-label"></label>
        <input asp-for="Article.link" class="form-control" />
    </div>
    <div class="form-group">
        <label for="existingPhotos" class="control-label">Existing Photos</label>
        <div id="existingPhotos">
            @foreach (var photo in ViewData["ExistingPhotos"] as IEnumerable<dynamic>)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(photo.Image)" class="img-thumbnail" />
            }
        </div>
    </div>
    <div class="form-group">
        <label for="articlePhotos" class="control-label">New Article Photos</label>
        <input type="file" multiple class="form-control" id="articlePhotos" name="articlePhotos" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
