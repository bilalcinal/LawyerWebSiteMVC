@model LawyerWebSiteMVC.Models.ArticleDto

@{
    ViewData["Title"] = "Edit Article";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Edit Article</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Article.Id" />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Article.Title" class="form-label"></label>
                                    <input asp-for="Article.Title" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Article.Subtitle" class="form-label"></label>
                                    <input asp-for="Article.Subtitle" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Article.link" class="form-label"></label>
                                    <input asp-for="Article.link" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Article.Content" class="form-label"></label>
                            <textarea asp-for="Article.Content" class="form-control content-textarea" id="content"></textarea>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Article.CategoryId" class="form-label">Category</label>
                            <select asp-for="Article.CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
                        </div>
                        <div class="form-group mb-3">
                            <label for="existingPhotos" class="form-label">Existing Photos</label>
                            <div id="existingPhotos" class="mb-2">
                                @foreach (var photo in ViewData["ExistingPhotos"] as IEnumerable<dynamic>)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(photo.Image)" class="img-thumbnail me-2" style="max-width: 150px;" />
                                }
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="articlePhotos" class="form-label">New Article Photos</label>
                            <input type="file" multiple class="form-control" id="articlePhotos" name="articlePhotos" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        CKEDITOR.replace('content', {
            height: 400
        });
    </script>
}
