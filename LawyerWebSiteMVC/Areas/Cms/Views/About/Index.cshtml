@using Newtonsoft.Json
@model LawyerWebSiteMVC.Data.About

@{
    ViewData["Title"] = "About Section";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">About Section</h3>
                </div>
                <div class="card-body">
                    @if (Model != null)
                    {
                        <h3>@Model.Title</h3>
                        <div>
                            @Html.Raw(JsonConvert.DeserializeObject<string>(Model.Content))
                        </div>
                        <div class="mt-3">
                            <a asp-action="CreateOrUpdate" class="btn btn-warning">Edit</a>
                            <form asp-action="Delete" method="post" asp-route-id="@Model.Id" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">No About Section found. Please create one.</div>
                        <a asp-action="CreateOrUpdate" class="btn btn-primary">Create About Section</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
